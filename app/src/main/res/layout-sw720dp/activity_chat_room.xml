<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/ListView"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
       android:dividerHeight="40dp"
        android:divider="@android:color/transparent"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_above="@id/ReceiveBtn">


    </ListView>
    <FrameLayout
        android:id="@+id/fragmentLocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_toRightOf="@id/ListView"
        android:layout_alignParentRight="true"
        >

    </FrameLayout>
    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="@string/btnSend" />

    <Button
        android:id="@+id/ReceiveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/fragmentLocation"
        android:text="@string/btnReceive"
        android:layout_alignRight="@id/ListView"/>



    <EditText
        android:id="@+id/ChatEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/ReceiveBtn"
        android:layout_toRightOf="@id/btnSend"
        android:hint="@string/editText"/>

</RelativeLayout>